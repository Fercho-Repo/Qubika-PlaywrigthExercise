jQuery(document).ready(function(){  

    // Logos Carousel - Ticker Mode
    jQuery('.logos-carousel').bxSlider({
      minSlides: 3,
      maxSlides: 12,
      slideWidth: 180,
      ticker: true,
      speed: 150000,
      onSliderLoad: function(){
        jQuery(".logos-carousel").addClass("initialized");
      }
    });

    // Work Testimonials Carousel
    const work_testimonials_carousel = new Swiper('.work-testimonials-carousel', {
      slidesPerView: "auto",
      speed: 500,
      loop: true,
      autoplay: {
          delay: 3000,
          disableOnInteraction: false,
      },
      pagination: {
          el: '.work-testimonials-pagination',
          type: 'bullets',
          clickable: 'true',
      },
      effect: 'fade',
      fadeEffect: {
          crossFade: true
      },
    });
    
    function revealHero() {     
      jQuery(".home .hero").addClass("active");
    }
    setTimeout(revealHero, 100);

    function revealHeroOut() { 
      var nextSectionHero = jQuery(".home .what-we-do .top-section-title").hasClass("active");
      if(nextSectionHero){
        jQuery(".home .hero").removeClass("active");
      }
      else{
        jQuery(".home .hero").addClass("active");
      }
    }
    $(window).scroll(revealHeroOut);

    // Recognitions Carrousel Mobile
    var init = false;
    var recognitions_mobile_carrousel;
    function recognitionsMobileCarrousel() {
        if (window.innerWidth <= 1024) {
        if (!init) {
            init = true;
            recognitions_mobile_carrousel = new Swiper(".recognitions-carrousel", {
              slidesPerView: "auto",
              speed: 500,
            });
        }
        } else if (init) {
        recognitions_mobile_carrousel.destroy();
        init = false;
        }
    }
    recognitionsMobileCarrousel();
    window.addEventListener("resize", recognitionsMobileCarrousel);

    // Report
    $(".report-modal-open").on("click",function(event){
        event.preventDefault();
        $(".report-modal").addClass("show");
    });

});