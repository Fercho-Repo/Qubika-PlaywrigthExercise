jQuery(document).ready(function(){  

  // Close Modal
  jQuery(".close-modal").on("click", function(event){
    jQuery(".modal").removeClass("show");
  });
  
  // Input File Uniform
  setTimeout(function() {
    jQuery(".modal input:file").uniform();
    jQuery(".modal input:checkbox").uniform();
    jQuery(".modal select").uniform();
  }, 500);
  

});